<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:paddingTop="8dp"
    android:paddingBottom="8dp">

    <Button android:id="@+id/btn_force"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/force"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_alignParentRight="true"/>

    <LinearLayout android:orientation="vertical"
        android:layout_toLeftOf="@+id/btn_force" android:layout_width="fill_parent"
        android:layout_height="fill_parent" android:id="@+id/TextLayout">

        <TextView android:id="@+id/title_term_deposit_list"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginTop="1dp"
            android:layout_marginLeft="18dp"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView android:id="@+id/expiration_term_deposit_list"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginTop="2dp"
            android:layout_marginLeft="18dp"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_below="@+id/title_term_deposit_list"/>

        <View
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:background="@color/colorPrimary"
            android:layout_marginTop="8dp"
            android:layout_below="@+id/expiration_term_deposit_list"/>

    </LinearLayout>

</RelativeLayout>